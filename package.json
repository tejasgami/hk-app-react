{
  "name": "hk-app",
  "version": "1.0.0",
  "description": "Dev Frontend",
  "scripts": {
    "start": "webpack-dashboard -- webpack-dev-server --config ./webpack/webpack.config.js",
    "build": "NODE_ENV=production webpack --config ./webpack/webpack.config.js -p",
    "build:win": "set NODE_ENV=production&& webpack --config ./webpack/webpack.config.js -p",
    "test": "mocha --compilers js:babel-core/register --require ./test/test_helper.js --recursive ./test",
    "test:watch": "npm run test -- --watch",
    "start:nodash": "webpack-dev-server --config ./webpack/webpack.config.js"
  },
  "author": "Tejas Gami",
  "license": "",
  "devDependencies": {
    "@types/jest": "^20.0.5",
    "@types/node": "^8.0.17",
    "@types/react": "^15.6.0",
    "@types/react-dom": "^15.5.1",
    "@types/react-redux": "^4.4.47",
    "@types/react-router-dom": "^4.0.7",
    "@types/validator": "^6.2.1",
    "@types/webpack-env": "^1.13.0",
    "awesome-typescript-loader": "^3.2.2",
    "babel-core": "^6.2.1",
    "babel-loader": "^6.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.1.18",
    "babel-preset-react": "^6.1.18",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-runtime": "^6.25.0",
    "clean-webpack-plugin": "^0.1.16",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.2",
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.0",
    "inline-manifest-webpack-plugin": "^3.0.1",
    "jsdom": "^8.1.0",
    "json-loader": "^0.5.4",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "loglevel": "^1.4.1",
    "object-assign": "^4.1.1",
    "postcss-loader": "^2.0.6",
    "react-addons-test-utils": "^0.14.7",
    "react-hot-loader": "^3.0.0-beta.7",
    "react-transform-hmr": "^1.0.4",
    "redux-logger": "^3.0.6",
    "style-loader": "^0.18.1",
    "stylelint": "^7.7.0",
    "stylelint-config-css-modules": "^0.1.0",
    "stylelint-config-standard": "^15.0.1",
    "tslint": "^5.5.0",
    "tslint-loader": "^3.5.3",
    "tslint-react": "^3.1.0",
    "url-loader": "^0.5.9",
    "webpack": "^3.4.1",
    "webpack-dashboard": "^0.4.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-dev-server": "^2.5.0",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-manifest-plugin": "^1.1.0"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "babel-preset-stage-1": "^6.24.1",
    "classnames": "^2.2.5",
    "iscroll": "^5.2.0",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "prop-types": "^15.5.10",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-iscroll": "^2.0.3",
    "react-redux": "^5.0.5",
    "react-responsive": "^1.3.4",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.1.2",
    "react-router-hash-link": "^1.1.0",
    "react-router-redux": "^4.0.8",
    "react-select": "^1.0.0-rc.7",
    "react-thunk": "^1.0.0",
    "react-toggle": "^4.0.1",
    "redux": "^3.7.2",
    "redux-form": "^7.0.3",
    "redux-thunk": "^2.2.0",
    "typescript": "^2.4.2",
    "validator": "^8.0.0"
  },
  "jest": {
    "mapCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).ts?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^.+\\.tsx?$": "<rootDir>/config/jest/typescriptTransform.js",
      "^(?!.*\\.(css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|ts|tsx)$"
    ],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    }
  }
}
